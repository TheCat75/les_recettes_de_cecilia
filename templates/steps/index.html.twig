{% extends 'base.html.twig' %}

{% block title %}Steps index{% endblock %}

{% block body %}
    <h1>Steps index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DescriptionStep</th>
                <th>OrderStep</th>
                <th>StepName</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for step in steps %}
            <tr>
                <td>{{ step.id }}</td>
                <td>{{ step.descriptionStep }}</td>
                <td>{{ step.orderStep }}</td>
                <td>{{ step.stepName }}</td>
                <td>{{ step.createdAt ? step.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ step.updatedAt ? step.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_steps_show', {'id': step.id}) }}">show</a>
                    <a href="{{ path('app_steps_edit', {'id': step.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_steps_new') }}">Create new</a>
{% endblock %}
