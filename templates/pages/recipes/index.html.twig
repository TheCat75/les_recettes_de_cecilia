{% extends 'base.html.twig' %}

{% block title %}Mes Recettes
{% endblock %}

{% block body %}
	<div class="row my-5">
		<div class="col d-flex justify-content-center">
			<h1>Mes Recettes</h1>
		</div>
	</div>
	{% if recipes |length > 0 %}
		<div class="row my-5">
			<div class="col d-flex justify-content-center">
				<a href="{{ path('app_recipes_new') }}">Create new</a>
			</div>
		</div>
		<div class="row my-5">
			<div class="col d-flex justify-content-center">
				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>NameRecipe</th>
							<th>Description</th>
							<th>NumberOfCovers</th>
							<th>PreparationTime</th>
							<th>CookingTime</th>
							<th>CreatedAt</th>
							<th>UpdatedAt</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for recipe in recipes %}
							<tr>
								<td>{{ recipe.id }}</td>
								<td>{{ recipe.nameRecipe }}</td>
								<td>{{ recipe.description }}</td>
								<td>{{ recipe.numberOfCovers }}</td>
								<td>{{ recipe.preparationTime ? recipe.preparationTime|date('H:i:s') : '' }}</td>
								<td>{{ recipe.cookingTime ? recipe.cookingTime|date('H:i:s') : '' }}</td>
								<td>{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
								<td>{{ recipe.updatedAt ? recipe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
								<td>
									<a href="{{ path('app_recipes_show', {'id': recipe.id}) }}">show</a>
									<a href="{{ path('app_recipes_edit', {'id': recipe.id}) }}">edit</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="10">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	{% else %}
		<div class="row my-5">
			<div class="col d-flex justify-content-center">
				<h2>Vous n'avez pas encore de recette</h2>
			</div>
		</div>
		<div class="row my-5">
			<div class="col d-flex justify-content-center">
				<a type="button" class="btn btn-primary-color text-uppercase fw-bold" href="{{ path('app_recipes_new') }}">Ajouter votre premi√®re recette</a>
			</div>
		</div>
	{% endif %}


{% endblock %}
