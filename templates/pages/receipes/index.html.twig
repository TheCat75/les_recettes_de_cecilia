{% extends 'base.html.twig' %}

{% block title %}Mes recettes
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="row my-5">
			<div class="col d-flex justify-content-center">
				<h1>
					Mes Recettes
				</h1>
			</div>
		</div>
		{% if receipes|length > 0 %}
			<div class="row my-5">
				<div class="col d-flex justify-content-center">
					<div class="card" style="width: 80%;">
						<div class="row mt-5">
							<div class="col-6 d-flex justify-content-center">
								<a type="button" class="btn btn-primary-color text-uppercase fw-bold" href="{{path('app_receipes_add')}}">Ajouter une recette</a>
							</div>
							<div class="col-6 d-flex justify-content-center">
								<button type="button" class="btn btn-dark-color text-uppercase fw-bold" >Supprimer les recettes selectionner</button>
							</div>
						</div>
						<div class="card-body">
							<div class="row my-5">
								<div class="col-12">
									<table class="table text-center align-middle">
										<thead>
											<tr class="text-uppercase">
												<th scope="col"></th>
												<th scope="col"></th>
												<th scope="col"></th>
												<th scope="col"></th>
												<th scope="col"></th>
											</tr>
										</thead>
										<tbody>
											{% for receipe in receipes %}
												<tr>
													<td><input type="checkbox" id="{{receipe.id}}"/></td>
													<th scope="row" class="text-uppercase">{{receipe.name}}</th>
													<td>
														<button class="btn btn-no-bg-light-color text-uppercase fw-bold" type="button">Voir la recette</td>
													</td>
													<td>
														<button class="btn btn-no-bg-primary-color text-uppercase fw-bold" type="button">
															Editer la recette</td>
													</td>
													<td>
														<button class="btn btn-no-bg-dark-color text-uppercase fw-bold" type="button">Supprimer la recette</td>
													</td>
												</tr>
											{% endfor %}
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		{% else %}
			<div class="row my-5">
				<div class="col d-flex justify-content-center">
					<h2>
						Vous n'avez pas encore de recette
					</h2>
				</div>
			</div>
			<div class="row my-5">
				<div class="col d-flex justify-content-center">
					<a type="button" class="btn btn-no-bg-primary-color text-uppercase fw-bold" href="{{path('app_receipes_add')}}">Ajouter votre premi√®re recette</a>
				</div>
			</div>
		{% endif %}

	</div>
{% endblock %}
