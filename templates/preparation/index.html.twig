{% extends 'base.html.twig' %}

{% block title %}Preparation index{% endblock %}

{% block body %}
    <h1>Preparation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Step</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for preparation in preparations %}
            <tr>
                <td>{{ preparation.id }}</td>
                <td>{{ preparation.step }}</td>
                <td>{{ preparation.description }}</td>
                <td>
                    <a href="{{ path('app_preparation_show', {'id': preparation.id}) }}">show</a>
                    <a href="{{ path('app_preparation_edit', {'id': preparation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_preparation_new') }}">Create new</a>
{% endblock %}
